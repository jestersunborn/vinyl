mixin item(index, cover, artist, album, link, year, category)
  div(class="item " + category, id="item-" + index)
    if index > 9
      span.number #{index}
    else
      span.number 0#{index}
    img(src=cover, id="cover-" + index).cover
    .info
      .album(id="album-" + index) #{album}
      .artist(id="artist-" + index) #{artist}
    .link
      a(href=link, target="_blank", id="link-" + index)
        i.fas.fa-link
    .year #{year}
